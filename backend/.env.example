# Backend Environment Variables Template
# Copy this file to .env and update values

# Security Features
# Use 'openssl rand -hex 32' to generate a secure secret key
SECRET_KEY=your-secret-key-here-for-local-dev
ALGORITHM=HS256

# Database
# Default is SQLite for local development
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///./dentsupply.db

# Razorpay (Optional for core catalog features)
RAZORPAY_KEY_ID=rzp_test_placeholder
RAZORPAY_KEY_SECRET=placeholder_secret
